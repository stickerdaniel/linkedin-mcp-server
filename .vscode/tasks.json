            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "-m",
                "linkedin_mcp_server",
                "--get-session"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "tail -n 20 -F ~/Library/Logs/Claude/mcp*.log",
            "detail": "Follow Claude Desktop MCP logs",
            "type": "shell",
            "command": "tail",
            "args": [
                "-n",
                "20",
                "-F",
                "~/Library/Logs/Claude/mcp*.log"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": []
        },
